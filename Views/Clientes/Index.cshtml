@model IEnumerable<Formulario_Cadastro_Pessoa.Models.Cliente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Clientes cadastrados</h1>
<p>
    <a class="btn btn-light btn-lg rounded-pill" style="background-color: #C0C0C0;" asp-action="Create" title="Create New">Cadastrar novo cliente</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered" style="background: linear-gradient(to bottom, #333, #666); color: white;">
        <thead>
            <tr>
                <th>Nome Completo</th>
                <th>Nome da Mãe</th>
                <th>Nome do Pai</th>
                <th>RG</th>
                <th>CPF</th>
                <th>Data de Nascimento</th>
                <th>CEP</th>
                <th>Cidade</th>
                <th>Bairro</th>
                <th>Logradouro</th>
                <th>UF</th>
                <th>Complemento</th>
                <th>Estado Civil</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NomeCompleto)</td>
                    <td>@Html.DisplayFor(modelItem => item.NomeMae)</td>
                    <td>@Html.DisplayFor(modelItem => item.NomePai)</td>
                    <td>@Html.DisplayFor(modelItem => item.RG)</td>
                    <td>@Html.DisplayFor(modelItem => item.CPF)</td>
                    <td>@item.DataNascimento.ToString("dd/MM/yyyy")</td> 
                    <td>@Html.DisplayFor(modelItem => item.CEP)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
                    <td>@Html.DisplayFor(modelItem => item.Bairro)</td>
                    <td>@Html.DisplayFor(modelItem => item.Logradouro)</td>
                    <td>@Html.DisplayFor(modelItem => item.UF)</td>
                    <td>@Html.DisplayFor(modelItem => item.Complemento)</td>
                    <td>@Html.DisplayFor(modelItem => item.EstadoCivil)</td>
                    <td>
                        <div class="d-flex">
                            <a class="btn btn-light btn-sm rounded-circle me-2 action-button" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a class="btn btn-secondary btn-sm rounded-circle me-2 action-button" asp-action="Details" asp-route-id="@item.Id" title="Details">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a class="btn btn-sm rounded-circle me-2 action-button" style="background-color: #8B0000; color: white; " asp-action="Delete" asp-route-id="@item.Id" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">